// Generic services conversion rules
// Services for the standard rods
// (scales with respective material)
// SERVICES
// HV, MV, LV
Station {
  stationName flangeTBPS
  type flange

  // Cu PE and Al from twp and optical fibres
  Conversion {
    Input {
      Element {
        elementName PE
        quantity 10
        unit g/m
      }
    }
    Output {
      Element {
        elementName PE
        quantity 10
        unit g/m
        service true
      }
    }  
  }

  Conversion {
    Input {
      Element {
        elementName Al
        quantity 10
        unit g/m
      }
    }
    Output {
      Element {
        elementName Al
        quantity 10
        unit g/m
        service true
      }
    }  
  }

  // Wires and cables one-to-one
  Conversion {
    Input {
      Element {
        elementName Cu
        quantity 10
        unit g/m
      }
    }
    Output {
      Element {
        elementName Cu
        quantity 10
        unit g/m
        service true
      }
    }
  }

  // Power cables conversions
  // As per Habia cables PP1-PP0 (700063813 Rev 03)
  // (10% of one cable per module)
  // Connectors same as 1-rod connector from http://cern.ch/go/P9bG
  // Binder connectors: Micro-T connectors - series 910 
  Conversion {
    // One module's worth of Al_MV
    Input {
      Element {
        elementName Al_MV
        quantity 0.612
        unit g/m
      }
    }
    // Per module
    Output {
      Element {
        elementName Al
        quantity 2.91
        unit g/m
        service true
      }
      Element {
        elementName Cu
        quantity 1.16
        unit g/m
        service true
      }
      // Insulator (50% for the MV)
      Element {
        elementName PE
        quantity 4.5 
        unit g/m
        service true
      }
      // Connector
      Element {
        elementName Cu
        quantity 0.27
        unit g
        service false
      }
      Element {
        elementName PE
        quantity 0.22
        unit g
        service false
      }
    }
  }

  Conversion {
    // One module's worth of Al_HV
    Input {
      Element {
        elementName Al_HV
        quantity 0.2295
        unit g/m
      }
    }
    // Per module
    Output {
      Element {
        elementName Al
        quantity 0.91 
        unit g/m
        service true
      }
      Element {
        elementName Cu
        quantity 0.32
        unit g/m
        service true
      }
      // Insulator (50% for the HV)
      Element {
        elementName PE
        quantity 4.5
        unit g/m
        service true
      }
      // Connector
      Element {
        elementName Cu
        quantity 0.18
        unit g
        service false
      }
      Element {
        elementName PE
        quantity 0.16
        unit g
        service false
      }
    }
  }

  // Manifolds + radial pipes + holders
  Conversion {
    Input {
      Element {
        elementName Steel
        quantity 7.9
        unit g/m
      }
    }
    Output {
      Element {
        elementName Steel
        quantity 17.2
        unit g/m
        service true
      }
      Element {
        elementName Steel
        quantity 4.2
        unit g
        service false
      }
      Element {
        elementName Al
        quantity 7.4
        unit g
        service false
      }
    }
  }
  Conversion {
    Input {
      Element {
        elementName CO2
        quantity 1.8
        unit g/m
      }
    }
    Output {
      Element {
        elementName CO2
        quantity 1.4
        unit g
        service false
      }
      Element {
        elementName CO2
        quantity 3.7
        unit g/m
        service true
      }
    }
  }

}
