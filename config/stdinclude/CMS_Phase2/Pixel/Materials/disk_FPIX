// Pixel endcap disks material
// Small disks (108 modules)
// 2500 um^2 pixels everywhere

Materials FPIX_disk {
  type layer
  matSubdetectorName FPIX_1

  // Cooling for the module
  // Average on disk
  Component {
    componentName Cooling
    service false
    scaleOnSensor 0
    Element {
      elementName Ti
      quantity 10.21
      unit g
    }
    Element {
      elementName CO2
      quantity 9.69
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 8 pipes per disk
  Component {
    componentName "Cooling"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Ti
      quantity 0.0266
      unit g/m
    }
    Element {
      elementName FPIX_CO2
      quantity 0.026
      unit g/m
    }
  }

  // Power for the module
  // Average on disk
  // 16 power chains per disk
  Component {
    componentName "Power wires"
    service false
    scaleOnSensor 0
    Element {
      elementName Al
      quantity 13.52
      unit g
    }
    Element {
      elementName Cu
      quantity 1.84
      unit g
    }
    Element {
      elementName PE
      quantity 4.91
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk
  Component {
    componentName "Power wires"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al
      quantity 0.0978
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0133
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.0352
      unit g/m
    }
  }

  // HV power lines
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "High voltage lines"
    service false
    scaleOnSensor 0
    Element {
      elementName Al_HV
      quantity 1.56
      unit g
    }
    Element {
      elementName Cu
      quantity 0.55
      unit g
    }
    Element {
      elementName PE
      quantity 5.6
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "High voltage lines"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al_HV
      quantity 0.0073
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0026
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.0264
      unit g/m
    }
  }

  // Support Mechanics
  //Mechanics
  Component {
    componentName "Disk support mechanics"
    service false
    scaleOnSensor 0
    Element {
      elementName CF
      quantity 0.4
      unit mm
    }
    Element {
      elementName Airex
      quantity 4
      unit mm
    }
  }
}
