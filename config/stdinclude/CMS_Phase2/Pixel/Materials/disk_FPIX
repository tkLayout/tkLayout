// Pixel endcap disks material
// Small disks (108 modules)

Materials FPIX_disk {
  type layer

  // Cooling for the module
  // Average on disk
  Component {
    componentName Cooling
    service false
    scaleOnSensor 0
    Element {
      elementName Ti
      quantity 11.45
      unit g
    }
    Element {
      elementName CO2
      quantity 10.8
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 8 pipes per disk
  Component {
    componentName "Services Cooling"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Ti
      quantity 0.0266
      unit g/m
    }
    Element {
      elementName FPIX_CO2
      quantity 0.026
      unit g/m
    }
  }

  // Power for the module
  // Average on disk
  Component {
    componentName "Power wires"
    service false
    scaleOnSensor 0
    Element {
      elementName Al
      quantity 4.7
      unit g
    }
    Element {
      elementName Cu
      quantity 0.99
      unit g
    }
    Element {
      elementName PE
      quantity 1
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 12 chains per disk
  Component {
    componentName "Services Power wires"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al
      quantity 0.032
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0067160494
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.006
      unit g/m
    }
  }

  // HV power wires
  // Power for the module
  Component {
    componentName "HV Power wires"
    service false
    scaleOnSensor 0
    Element {
      elementName Al_HV
      quantity 0.393125
      unit g
    }
    Element {
      elementName Cu
      quantity 0.140
      unit g
    }
    Element {
      elementName PE
      quantity 1.41
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 12 chains per disk, 2 wires per chain
  Component {
    componentName "Services HV Power wires"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al_HV
      quantity 0.005508
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0019608
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.0198
      unit g/m
    }
  }

  // Support Mechanics
  //Mechanics
  Component {
    componentName Mechanics
    service false
    scaleOnSensor 0
    Element {
      elementName CF
      quantity 0.4
      unit mm
    }
    Element {
      elementName Airex
      quantity 4
      unit mm
    }
  }
}
