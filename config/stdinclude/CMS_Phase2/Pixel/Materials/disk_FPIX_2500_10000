// Pixel endcap disks material
// Small disks (108 modules)
// 2500 um^2 pixels in 1x2 modules, 10000 um^2 pixels in 2x2 modules

Materials FPIX_disk_2500_10000 {
  type layer

  // Cooling for the module
  // Average on disk
  Component {
    componentName Cooling
    service false
    scaleOnSensor 0
    Element {
      elementName Ti
      quantity 10.21
      unit g
    }
    Element {
      elementName CO2
      quantity 9.69
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 8 pipes per disk
  Component {
    componentName "Cooling"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Ti
      quantity 0.0266
      unit g/m
    }
    Element {
      elementName FPIX_CO2
      quantity 0.026
      unit g/m
    }
  }

  // Power for the module
  // Average on disk
  // 16 power chains per disk
  // 75% of the amount in disk_FPIX : 50% reduction in 2 rings out of 4 (hence reduction is 0.5*0.5 = 0.25)
  Component {
    componentName "Power wires"
    service false
    scaleOnSensor 0
    Element {
      elementName Al
      quantity 10.14
      unit g
    }
    Element {
      elementName Cu
      quantity 1.38
      unit g
    }
    Element {
      elementName PE
      quantity 3.683
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk
  // 75% of the amount in disk_FPIX : 50% reduction in 2 rings out of 4 (hence reduction is 0.5*0.5 = 0.25)
  Component {
    componentName "Power wires"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al
      quantity 0.073
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.010
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.026
      unit g/m
    }
  }

  // HV power lines
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "High voltage lines"
    service false
    scaleOnSensor 0
    Element {
      elementName Al_HV
      quantity 1.56
      unit g
    }
    Element {
      elementName Cu
      quantity 0.55
      unit g
    }
    Element {
      elementName PE
      quantity 5.6
      unit g
    }
  }
  // fake numbers for calculating conversion with a factor of 1000
  // 16 power chains per disk, 2 HV lines per power chain
  Component {
    componentName "High voltage lines"
    service true
    scaleOnSensor 0
    Element {
      elementName FPIX_Al_HV
      quantity 0.0073
      unit g/m
    }
    Element {
      elementName FPIX_Cu
      quantity 0.0026
      unit g/m
    }
    Element {
      elementName FPIX_PE
      quantity 0.0264
      unit g/m
    }
  }

  // Supporting structures
  //Mechanics
  Component {
    componentName "Disk support mechanics"
    service false
    scaleOnSensor 0
    Element {
      elementName CF
      quantity 0.4
      unit mm
    }
    Element {
      elementName Airex
      quantity 4
      unit mm
    }
  }
}
