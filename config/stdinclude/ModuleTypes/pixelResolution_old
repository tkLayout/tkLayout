  Barrel PXB {
// If paraneters to calculate resolutionLocalXBarrel and resolutionLocalYBarrel are specified, the following models are used :
// Model : resolutionLocalXBarrel = resolutionLocalXBarrelParam0 + resolutionLocalXBarrelParam1 * cos(alpha) + resolutionLocalXBarrelParam2 * cos(alpha)^2
// Model : resolutionLocalYBarrel = resolutionLocalYBarrelParam0 + resolutionLocalYBarrelParam1 * exp(-resolutionLocalYBarrelParam2 * abs(cos(beta))) * sin(resolutionLocalYBarrelParam3 * abs(cos(beta)) + resolutionLocalYBarrelParam4)
// With alpha and beta the reference notation angles for a track hitting a pixel module
    Layer 1,2 {
      //resolutionLocalX 0.010 // 10 um
      //resolutionLocalY 0.010 // 10 um

      resolutionLocalXBarrelParam0 0.0105  // mm
      resolutionLocalXBarrelParam1 -0.027  // mm
      resolutionLocalXBarrelParam2 0.062  // mm

      resolutionLocalYBarrelParam0 0.014  // mm
      resolutionLocalYBarrelParam1 0.026  // mm
      resolutionLocalYBarrelParam2 2.2
      resolutionLocalYBarrelParam3 -2.4
      resolutionLocalYBarrelParam4 0.8
    }
